<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:cc="clr-namespace:Lexicom.Concentrate.Wpf.Controls;assembly=Lexicom.Concentrate.Wpf.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="xDefaultTextFieldStyle" TargetType="{x:Type cc:TextField}" BasedOn="{StaticResource ccDefaultTextFieldStyle}">
        <Setter Property="KeyBackground" Value="Transparent"/>
        <Setter Property="KeyBorderThickness" Value="0"/>
        <Setter Property="KeyFontSize" Value="16"/>
        <Setter Property="KeyPadding" Value="0"/>
        <Setter Property="KeyFontWeight" Value="Bold"/>
        <Setter Property="KeyForeground" Value="{DynamicResource xThemeInteriorPrimaryHard}"/>

        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="{DynamicResource xThemeInteriorPrimarySoft}"/>
    </Style>

    <Style TargetType="{x:Type cc:TextField}" BasedOn="{StaticResource xDefaultTextFieldStyle}"/>

</ResourceDictionary>