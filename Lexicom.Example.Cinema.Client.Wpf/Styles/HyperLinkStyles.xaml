<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="xDefaultHyperLink" TargetType="Hyperlink" BasedOn="{StaticResource {x:Type Hyperlink}}">
        <Setter Property="Foreground" Value="{DynamicResource xThemeInteriorNoticeSoft}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{DynamicResource xThemeInteriorAlertHard}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Hyperlink" BasedOn="{StaticResource xDefaultHyperLink}"/>

</ResourceDictionary>